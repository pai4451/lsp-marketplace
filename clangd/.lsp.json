{
    "cpp": {
        "command": "clangd",
        "args": [
            "--background-index",
            "--clang-tidy",
            "--completion-style=detailed",
            "--header-insertion=iwyu",
            "--function-arg-placeholders",
            "--fallback-style=LLVM",
            "--log=error"
        ],
        "extensionToLanguage": {
            ".c": "c",
            ".cpp": "cpp",
            ".cc": "cpp",
            ".cxx": "cpp",
            ".c++": "cpp",
            ".h": "c",
            ".hpp": "cpp",
            ".hh": "cpp",
            ".hxx": "cpp",
            ".h++": "cpp"
        },
        "transport": "stdio",
        "initializationOptions": {
            "clangdFileStatus": true
        },
        "settings": {},
        "maxRestarts": 3
    }
}